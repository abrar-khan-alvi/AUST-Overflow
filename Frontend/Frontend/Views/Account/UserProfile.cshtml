@model Frontend.Models.UserProfileModel
@{
    ViewBag.Title = "User Profile";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-4">
                        <img src="https://i.pinimg.com/564x/0d/64/98/0d64989794b1a4c9d89bff571d3d5842.jpg"  alt="Avatar" class="rounded-circle me-3" width="80" height="80" />
                        <div>
                            <h2 class="mb-0">@Model.Username</h2>
                            <p class="text-muted mb-0">Reputation: @Model.Reputation</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Personal Info</h5>
                            <p><strong>Name:</strong> @Model.Name</p>
                            <p><strong>Department:</strong> @Model.Department</p>
                            <p><strong>Email:</strong> @Model.Email</p>
                        </div>
                        <div class="col-md-6">
                            <h5>Activity</h5>
                            <p><strong>Total Questions:</strong> @Model.QuestionsAsked</p>
                            <p><strong>Total Answers:</strong> @Model.AnswersProvided</p>
                            <p><strong>Total Comments:</strong> @Model.CommentsMade</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>