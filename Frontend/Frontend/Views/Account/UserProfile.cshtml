@model Frontend.Models.UserProfileModel

@{
    ViewBag.Title = "User Profile";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-center mb-4">User Profile</h2>
            <div class="card">
                <div class="card-header">
                    <img src="@Model.Avatar" alt="Avatar" class="rounded-circle" width="100" height="100" />
                    <h3>@Model.Username</h3>
                </div>
                <div class="card-body">
                    <p><strong>Name:</strong> @Model.Name</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Department:</strong> @Model.Department</p>
                    <p><strong>Reputation:</strong> @Model.Reputation</p>
                    <p><strong>Questions Asked:</strong> @Model.QuestionsAsked</p>
                    <p><strong>Answers Provided:</strong> @Model.AnswersProvided</p>
                    <p><strong>Comments Made:</strong> @Model.CommentsMade</p>
                </div>
            </div>
        </div>
    </div>
</div>
