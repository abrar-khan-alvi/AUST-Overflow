<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title AUST Overflow</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.3.2/mdb.min.css" rel="stylesheet" />
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color:black!important; color:white!important">
        <!-- Container wrapper -->
        <div class="container-fluid">
            <!-- Navbar brand -->
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="~/Assests/logonav.png" style="width:35px;" alt="Logo" />
            </a>

            <!-- Toggle button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Collapsible wrapper -->
            <div class="collapse navbar-collapse" id="navbarText">
                <!-- Centered nav items -->
                <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Questions", "AllQuestion", "Question", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Search", "SearchPost", "Question", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>

                <!-- Right elements -->
                <div class="d-flex align-items-center">
                    @if (Session["Email"] == null)
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">@Html.ActionLink("Login", "Login", "Account", new { area = "" }, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Signup", "SignUp", "Account", new { area = "" }, new { @class = "nav-link" })</li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">@Html.ActionLink("Ask Question", "Post", "Question", new { area = "" }, new { @class = "nav-link" })</li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="https://i.pinimg.com/564x/0d/64/98/0d64989794b1a4c9d89bff571d3d5842.jpg" class="rounded-circle" height="22" alt="Avatar" loading="lazy" />
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li>@Html.ActionLink("My profile", "UserProfile", "Account", new { area = "" }, new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("Settings", "Settings", "Account", new { area = "" }, new { @class = "dropdown-item" })</li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>@Html.ActionLink("Logout", "LogOff", "Account", new { area = "" }, new { @class = "dropdown-item" })</li>
                                </ul>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </div>
    </nav>
    <!-- Navbar -->

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text- pt-4">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <h5>AUST Overflow</h5>
                        <p>Helping students at AUST connect, share, and learn together.</p>
                    </div>
                    <div class="col-md-4">
                        <h5>Quick Links</h5>
                        <ul class="list-unstyled">
                            <li><a href="@Url.Action("Index", "Home")" class="text-dark">Home</a></li>
                            <li><a href="@Url.Action("AllQuestion", "Question")" class="text-dark">Questions</a></li>
                            <li><a href="@Url.Action("Post", "Question")" class="text-dark">Ask Question</a></li>
                            <li><a href="@Url.Action("Contact", "Home")" class="text-dark">Contact</a></li>
                        </ul>
                    </div>
                    <div class="col-md-4">
                        <h5>Contact Us</h5>
                        <ul class="list-unstyled">
                            <li><i class="fas fa-envelope"></i> <a href="mailto:support@austoverflow.com" class="text-dark">support@austoverflow.com</a></li>
                            <li><i class="fas fa-phone"></i> <span class="text-dark">+1 234 567 890</span></li>
                            <li>
                                <a href="#" class="text-dark me-2"><i class="fab fa-facebook-f"></i></a>
                                <a href="#" class="text-dark me-2"><i class="fab fa-twitter"></i></a>
                                <a href="#" class="text-dark me-2"><i class="fab fa-linkedin-in"></i></a>
                                <a href="#" class="text-dark"><i class="fab fa-github"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="text-center py-3">
                    <p>&copy; @DateTime.Now.Year - AUST Overflow. All rights reserved.</p>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        // Initialization for ES Users
        import { Dropdown, Collapse, initMDB } from "mdb-ui-kit";

        initMDB({ Dropdown, Collapse });
    </script>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- MDB -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.3.2/mdb.umd.min.js"></script>
</body>
</html>
