@{
    ViewBag.Title = "About Us";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About Us - AUST Overflow</title>
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }

        .about-hero {
            background: url('/Assests/bg.jpg') no-repeat center center;
            background-size: cover;
            height: 50vh;
            color: white;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .about-hero h1 {
                font-size: 3rem;
            }

        .about-section {
            padding: 5rem 0;
        }

            .about-section img {
                border-radius: 10px;
            }

        .mission-vision-section {
            background-color: #f8f9fa;
            padding: 5rem 0;
        }

        .team-section {
            padding: 5rem 0;
        }

        .team-member img {
            border-radius: 50%;
            width: 150px;
            height: 150px;
            object-fit: cover;
        }
    </style>
</head>
<body>

    <!-- Hero Section -->
    <header class="about-hero text-center">
        <div>
            <h1>About AUST Overflow</h1>
            <p>Our mission is to foster learning and collaboration among students and professionals.</p>
        </div>
    </header>

    <!-- About Section -->
    <section class="about-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 order-md-2">
                    <img src="~/Assests/logo reg.png" class="img-fluid w-75" alt="AUST Overflow">
                </div>
                <div class="col-md-6 order-md-1">
                    <h2>Who We Are</h2>
                    <p>AUST Overflow is a community-driven platform where students and professionals can ask questions, share knowledge, and connect with others. Our mission is to foster learning and collaboration among individuals from various fields.</p>
                    <p>We believe in the power of collective knowledge and the importance of sharing expertise to help each other grow and succeed. Join our community today and be part of a vibrant and supportive network.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Mission and Vision Section -->
    <section class="mission-vision-section text-center">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h3>Our Mission</h3>
                    <p>To create a collaborative platform where knowledge is freely shared and where students and professionals can grow together.</p>
                </div>
                <div class="col-md-6">
                    <h3>Our Vision</h3>
                    <p>To be the leading platform for academic and professional knowledge exchange, fostering a global community of learners and experts.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Team Section -->
    <section class="team-section">
        <div class="container">
            <div class="text-center mb-5">
                <h2>Meet the Team</h2>
                <p>Our dedicated team of professionals is here to support and guide you.</p>
            </div>
            <div class="row text-center">
                <div class="col-md-4 team-member">
                    <img src="~/Assests/433452884_2062902010762226_9214119439254119489_n.jpg" alt="Team Member">
                    <h5>John Doe</h5>
                    <p>Founder & CEO</p>
                </div>
                <div class="col-md-4 team-member">
                    <img src="~/Assests/441319214_916766196914539_227074261234279834_n.jpg" alt="Team Member">
                    <h5>Jane Smith</h5>
                    <p>Chief Technology Officer</p>
                </div>
                <div class="col-md-4 team-member">
                    <img src="~/Assests/download.jpeg" alt="Team Member">
                    <h5>Emily Johnson</h5>
                    <p>Community Manager</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
